        <a class="btn btn-outline-light btn-lg" href="/login" role="button">Login</a>
        <br><br><p>Do not have an account yet?</p>
        <a class="btn btn-outline-light btn-lg" href="/register" role="button">Register</a>
        <% } else { %>  
            <br><p>Shoes</p>
            <a class="btn btn-outline-light btn-lg" href="/shoes" role="button">Shoe List</a>
            <br><br><p>Brands</p>
            <a class="btn btn-outline-light btn-lg" href="/brands" role="button">Brand List</a>
        <% } %>  
      </div>
    </div>
  </div>
