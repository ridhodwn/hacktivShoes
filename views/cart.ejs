<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.4.1/dist/css/bootstrap.min.css" integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">
    <title>Shoe List</title>
</head>
<body>
    <%- include('partials/navbar.ejs') %> 
    <br>
    <h1 class="text-center">Your Shopping Cart</h1>

    <div class="text-center">
        <h3><%= caption %> </h3>
    </div>
    <br>
    <div class="container">
        <table class="table">
            <thead>
              <tr>
                <th scope="col">Image</th>
                <th scope="col">Shoe Name</th>
                <th scope="col">Price per pcs</th>
                <th scope="col">Amount</th>
                <th scope="col">Total Price</th>
                <th scope="col">Actions</th>
              </tr>
            </thead>
            <tbody>
                <% shoesData.forEach(el => { %> 
                    <tr>
                        <td>
                            <img src="<%= el.photo %>" alt="Shoes pic" style="max-width: 200px;">
                        </td>
                        <td><%= el.name %></td>
                        <td><%= el.price %></td>
                        <td><%= el.amount %></td>
                        <td><%= el.totalPrice %></td>
                        <td>
                            <a href="/cart/<%= userId %> /delete/<%= el.id %>">
                                <button class="btn btn-danger">Delete</button>
                            </a>
                            <% if(el.amount > 1) { %>
                                <a href="/cart/<%= userId %>/reduce/<%= el.id %>">
                                    <button class="btn btn-warning">Reduce Amount</button>
                                </a>
                            <% } %>  
                        </td>
                    </tr>
                <% }) %> 
            </tbody>
          </table>
          <div class="text-center">
            <a href="/invoice/<%= userId %>">
                <button class="btn btn-success">Print Invoice</button>
            </a>
          </div><br>
    </div>
</body>
</html>